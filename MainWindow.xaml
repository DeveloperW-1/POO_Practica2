<Window x:Name="formMenu" x:Class="POO_Practica2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POO_Practica2"
        mc:Ignorable="d"
        Title="Menu" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Menu HorizontalAlignment="Left" Height="33" VerticalAlignment="Top" Width="794" Grid.ColumnSpan="2" Margin="0,0,-0.4,0">
            <MenuItem x:Name="miOpciones" Header="Opciones">
                <MenuItem Name="miCalculadora" Header="Calculadora" Click="miCalculadora_Click"/>
                <MenuItem Name="miFiguras" Header="Figuras Geometricas" Click="miFiguras_Click"/>
            </MenuItem>
            <MenuItem x:Name="miDatos" Header="Datos">
                <MenuItem x:Name="miCategorias" Header="Categorias" Click="miCategorias_Click"/>
            </MenuItem>
            <MenuItem x:Name="miSalir" Header="Salir"/>
        </Menu>

    </Grid>
</Window>
